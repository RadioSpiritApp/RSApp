= stylesheet_link_tag 'admin-style'
.row
  .col-xs-10.col-sm-8.col-md-4
    %h2
      Change Password
    .panel-body
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-password" }) do |f|
        = devise_error_messages!
        %fieldset
          .form-group
            = f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: "Current Password", required: true
          .form-group
            = f.password_field :password, autocomplete: "off", class: 'form-control new-password', placeholder: "New Password", required: true
          .form-group
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Confirm Password", required: true
          = f.submit 'Update', class: 'btn btn-primary', title: "Update admin password"
