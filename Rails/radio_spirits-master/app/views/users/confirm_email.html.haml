.col-md-offset-3.col-md-6
  %table.table
    %tbody
      %tr
        %td.black-bg.text-center
          = image_tag('logo.png')
      - if @success
        %tr
          %td.text-center
            %i.fa.fa-check-circle{style: "color: green; font-size: 60px;"}
      - else
        %tr
          %td.text-center
            %i.fa.fa-exclamation-triangle{style: "color: red; font-size: 60px;"}
      %tr.text-center
        %td
          %h3
            = @message
      %tr
        %td.black-bg.text-center
          %h4.white-text
